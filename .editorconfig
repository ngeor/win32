# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.sh]
end_of_line = lf

# Delphi
[*.{lfm,lpi,lpr,pas}]
indent_size = 2

# VC6
[*.{cpp,def,idl,sln,rgs}]
indent_style = tab

# Visual Studio C++
[*.{vcxproj}]
indent_size = 2

[Makefile]
indent_style = tab
