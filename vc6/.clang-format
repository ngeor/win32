BasedOnStyle: Microsoft
UseTab: AlignWithSpaces
IncludeCategories:
    # precompiled header should be first
    - Regex: 'stdafx'
      Priority: -20
    # windows.h next
    - Regex: '<windows'
      Priority: -10
    # standard includes next
    - Regex: '<'
      Priority: -5
    # autogenerated file_h.h or file_i.c
    - Regex: '_[a-z].[a-z]'
      Priority: -4
IncludeBlocks: Merge
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveMacros: Consecutive
AccessModifierOffset: -4
AlignTrailingComments: true
DerivePointerAlignment: false
PointerAlignment: Left
